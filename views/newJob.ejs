  <div class="landing-banner container-fluid d-flex  justify-content-center align-items-center p-4">
    <div class="col-lg-7 col-sm-12 text-sm-center text-lg-left">
      <h1>Admin page</h1>
      <p>Add, update and delete expired jobs</p>
    </div>
    <div class="d-sm-none d-lg-flex col-lg-5 col-sm-0 banner-img" style="z-index: 0;">
    </div>

  </div>

  <h2 class="text-center font-weight-bolder page-header-title">Add job opening</h2>
  <div class=" p-2 bg-white mt-4 form-wrapper">
    <form action="/auth/job/add" method="post" class=" login-form">
      <div class="form-elem">
        <div class="input-group mb-4 mr-sm-2 mb-lg-0 position-relative">
          <div class="w-100 h-100"><label class="label" for="pos-browser" >Position</label></div>
          <input list="pos-suggestions" name="position" id="pos-browser" class="form-control rounded-lg p-4"
          placeholder="eg: Graphics designer" autocomplete="off">
          <datalist id="pos-suggestions">
            <% departments.forEach((pos)=>{ %>
              <option value="<%= pos %>">
            <% }) %>
          </datalist>
        </div>
      </div>


      <div class="form-elem">
        <div class="input-group mb-4 mr-sm-2 mb-lg-0 position-relative">
          <div class="w-100 h-100"><label class="label" for="dept-browser" >Department</label></div>
          <input list="dept-suggestions" name="department" id="dept-browser" class="form-control rounded-lg p-4"
          placeholder="eg: Design and creatives" autocomplete="off">
          <datalist id="dept-suggestions">
            <% departments.forEach((dept)=>{ %>
              <option value="<%= dept %>">
            <% }) %>
          </datalist>
        </div>
      </div>           

      <div class=" form-elem">
        <div class="input-group mb-4 mr-sm-2 mb-lg-0 position-relative">
          <div class="w-100 h-100"><label class="label" for="loc-browser">Location</label></div>
          <input list="loc-suggestions" name="location" id="loc-browser" class="form-control rounded-lg p-4"
          placeholder="eg: Montreal" autocomplete="off">
          <datalist id="loc-suggestions">
            <% locations.forEach((loc)=>{ %>
              <option value="<%= loc %>">
            <% }) %>
          </datalist>          
        </div>
      </div>

      <div class="form-elem">
        <div class="input-group mb-4 mr-sm-2 mb-lg-0 position-relative">
          <div class="w-100 h-100"><span class="label">Role</span></div>
          <textarea name="role" id="" cols="100" rows="7" style="padding: 0.7em;"
          placeholder="eg: The role should be one paragraph."></textarea>
        </div>
      </div>
      
      <div class="form-elem">
        <div class="input-group mb-4 mr-sm-2 mb-lg-0 position-relative">
          <div class="w-100 h-100"><span class="label">Description</span></div>
          <textarea name="description" id="" cols="100" rows="7" style="padding: 0.7em;"
          placeholder="eg:  -- The description should start with a hyphen and each on a line."></textarea>
        </div>
      </div>
     
      <div class="form-elem">
        <div class="input-group mb-4 mr-sm-2 mb-lg-0 position-relative">
          <div class="w-100 h-100"><span class="label">Requirements</span></div>
          <textarea name="role_requirement" id="" cols="100" rows="7" style="padding: 0.7em;"
          placeholder="eg:  -- The Requirements should start with a hyphen and each on a line."></textarea>
        </div>
      </div>

      <div class="form-elem">
        <div class="input-group mb-4 mr-sm-2 mb-lg-0 position-relative">
          <div class="w-100 h-100"><span class="label">Perks</span></div>
          <textarea name="perks" id="" cols="100" rows="7" style="padding: 0.7em;"
          placeholder="eg:  -- The perks should start with a hyphen and each on a line."></textarea>
        </div>
      </div>
      <button class="text-center px-4 py-2 btn btn-primary rounded-lg login-btn">Add</button>
    </form>
  </div>

  
    <!-- Modal -->
    <div class="modal" id="exampleModalCentered" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenteredLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenteredLabel">Change password</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/auth/user/changePassword" method="post">
            <div class="modal-body">
              <div class="form-elem">
                <div class="input-group mb-4 mr-sm-2 mb-lg-0 position-relative">
                  <div class="w-100 h-100"><span class="label">Old password</span></div>
                  <input type="password" name="old_password" class="form-control rounded-lg p-4">
                </div>
              </div>
              <div class="form-elem">
                <div class="input-group mb-4 mr-sm-2 mb-lg-0 position-relative">
                  <div class="w-100 h-100"><span class="label">New password</span></div>
                  <input type="password" name="new_password" class="form-control rounded-lg p-4">
                </div>
              </div>
              <div class="form-elem">
                <div class="input-group mb-4 mr-sm-2 mb-lg-0 position-relative">
                  <div class="w-100 h-100"><span class="label">Confirm New password</span></div>
                  <input type="password" name="confirm_password" class="form-control rounded-lg p-4">
                </div>
              </div>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal"
                style="background-color: #e55454 !important;border:none">Close</button>
              <button type="submit" class="btn btn-primary">Update password</button>
            </div>
          </form>

        </div>
      </div>
    </div>


  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
