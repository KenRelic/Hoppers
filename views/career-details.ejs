                <img src="https://res.cloudinary.com/dw4rdnuqh/image/upload/v1593028935/Team-Mars/Career-Bunny-Full_r9nwvt.png"
                    alt="bunny">
            </div>
            <div class="role">
                <h3 class="head">The Role</h3>
                <p class="text"><%= jobApplyingFor.role %></p>
            </div>

            <div class="responsibilities">
                <h3 class="head">Responsibilities</h3>
                <% for(const prop in jobApplyingFor.description) { %>
                <p class="text">
                    <li style="list-style: none !important; list-style-position: outside; position:relative;"><span
                            style="margin-right:0.3em; position: absolute;top: 0;left: -1em; list-style: none;">&dash;</span>
                        <%= jobApplyingFor.description[prop] %> </li>
                </p>
                <% } %>
            </div>
            <div class="qualify">
                <h3 class="head">Qualifications</h3>
                <% for(const prop in jobApplyingFor.role_requirement) { %>
                <p class="text">
                    <li style="list-style: none !important; list-style-position: outside; position:relative;"><span
                            style="margin-right:0.3em; position: absolute;top: 0;left: -1em; list-style: none;">&dash;</span>
                        <%= jobApplyingFor.role_requirement[prop] %> </li>
                </p>
                <% } %>
            </div>
            <% if(jobApplyingFor.perks != undefined && Object.keys(jobApplyingFor.perks).length > 0 ){ %>
            <div class="perks">
                <h3 class="head">Perks</h3>
                <% for(const prop in jobApplyingFor.perks) { %>
                <p id="benefit" class="text">
                    <li style="list-style: none !important; list-style-position: outside; position:relative;"><span
                            style="margin-right:0.3em; position: absolute;top: 0;left: -1em; list-style: none;">&dash;</span>
